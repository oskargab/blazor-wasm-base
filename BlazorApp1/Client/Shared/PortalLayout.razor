@inherits LayoutComponentBase
@using Microsoft.AspNetCore.Components.Authorization;

<MudLayout>
    <MudAppBar>
        <MudIconButton Icon="@Icons.Material.Filled.Menu" Color="Color.Inherit" Edge="Edge.Start" OnClick="@((e) => DrawerToggle())" />
        My Application
        <MudSpacer/>
        <LoginDisplay />
    </MudAppBar>
            <MudDrawer @bind-Open="@_drawerOpen" ClipMode="DrawerClipMode.Docked">
                <MudNavMenu>
                    <MudNavLink Href="/portal" Match="NavLinkMatch.All">Dashboard</MudNavLink>
                    <MudNavLink Href="/portal/fetchdata" Match="NavLinkMatch.Prefix">Servers</MudNavLink>
                    <MudNavGroup Title="Settings" Expanded="true">
                        <MudNavLink Href="/portal/settings" Match="NavLinkMatch.Prefix">Users</MudNavLink>
                        <MudNavLink Href="/portal/settings" Match="NavLinkMatch.Prefix">Security</MudNavLink>
                    </MudNavGroup>
                    <MudNavLink Href="/portal/about" Match="NavLinkMatch.Prefix">About</MudNavLink>
                </MudNavMenu>
            </MudDrawer>  
    <MudMainContent>
        <MudContainer MaxWidth="MaxWidth.Medium">
            @Body
        </MudContainer>
    </MudMainContent>
</MudLayout>

@code {
    bool _drawerOpen = true;

    void DrawerToggle()
    {
        _drawerOpen = !_drawerOpen;
    }
}

