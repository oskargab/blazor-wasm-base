@page "/login"
@inject HttpClient http
@inject NavigationManager _navigationManager
@inject Blazored.LocalStorage.ILocalStorageService _localStorageService;

<MudContainer MaxWidth="MaxWidth.Small">
<MudPaper Class="ma-6">
          
    <MudText Typo="Typo.h4">User Login</MudText>
        
    <MudStack AlignItems="AlignItems.Center" Class="pa-6">

        <MudButton Href=@("/auth/google-login?returnurl="+ http.BaseAddress.ToString()+ "/portal/")
                    Variant="Variant.Outlined"
                    StartIcon="@Icons.Custom.Brands.Facebook"
                    Color="Color.Info">
            Sign in with Facebook
        </MudButton>
        
        <MudButton Href=@("/auth/google-login?returnurl="+ http.BaseAddress.ToString()+ "/portal/")
                Variant="Variant.Outlined"
                StartIcon="@Icons.Custom.Brands.Google"
                Color="Color.Secondary">
        Sign in with Google
        </MudButton>
    </MudStack>
</MudPaper>
</MudContainer>

