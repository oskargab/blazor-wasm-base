@page "/login"
@inject HttpClient http
@inject NavigationManager _navigationManager
@inject Blazored.LocalStorage.ILocalStorageService _localStorageService;

<MudContainer MaxWidth="MaxWidth.Small">
    <MudPaper Class="ma-6">

        <MudText Typo="Typo.h4">User Login</MudText>
        <link href="https://use.fontawesome.com/releases/v5.14.0/css/all.css" rel="stylesheet">
        <MudStack AlignItems="AlignItems.Center" Class="pa-6">

            <MudButton Href=@("/auth/discord-login")
                       Variant="Variant.Outlined"
                       StartIcon="fab fa-discord"
                       Color="Color.Info">
                Sign in with Discord
            </MudButton>

            <MudButton Href=@("/auth/facebook-login")
                       Variant="Variant.Outlined"
                       StartIcon="@Icons.Custom.Brands.Facebook"
                       Color="Color.Info">
                Sign in with Facebook
            </MudButton>

            <MudButton Href=@("/auth/google-login")
                       Variant="Variant.Outlined"
                       StartIcon="@Icons.Custom.Brands.Google"
                       Color="Color.Secondary">
                Sign in with Google
            </MudButton>
        </MudStack>
    </MudPaper>
</MudContainer>
